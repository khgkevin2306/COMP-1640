<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Idea</title>
    @if (!User.Identity.IsAuthenticated)
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Idea.styles.css" asp-append-version="true" />
</head>
<body class="skin-blue">
    @if (User.Identity.IsAuthenticated)
    {
        <link href="~/css/AdminLTE/font-awesome.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/ionicons.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/dist/css/AdminLTE.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/dist/css/skins/_all-skins.min.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/plugins/iCheck/flat/blue.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/plugins/morris/morris.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/plugins/jvectormap/jquery-jvectormap-1.2.2.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/plugins/datepicker/datepicker3.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/plugins/daterangepicker/daterangepicker-bs3.css" rel="stylesheet" type="text/css" />
        <link href="~/css/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css" rel="stylesheet" type="text/css" />

        <div class="wrapper">
            <header class="main-header">
                <!-- Logo -->
                <a href="/" class="logo"><b>Idea</b></a>
                <!-- Header Navbar: style can be found in header.less -->
                <nav class="navbar navbar-static-top" role="navigation">
                    <!-- Sidebar toggle button-->
                    <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                        <span class="sr-only">Toggle navigation</span>
                    </a>
                    <div class="navbar-custom-menu">
                        <ul class="nav navbar-nav">
                            <!-- User Account: style can be found in dropdown.less -->
                            <li class="dropdown user user-menu">
                                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                                    <span class="hidden-xs" style="font-size: 13px;">@User.Identity?.Name</span>
                                </a>
                            </li>
                            <li class="dropdown user user-menu">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                        <button type="submit" class="nav-link btn btn-link text-dark" style="padding: 0px; color: white; font-size: 12px;">
                                            Logout
                                        </button>
                                    </form>
                                </a>
                            </li>
                        </ul>
                    </div>
                </nav>
            </header>

            <aside class="main-sidebar">
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar user panel -->
                    <div class="user-panel">
                        <div class="info">
                            <p><a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">@User.Identity?.Name</a></p>
                            <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                        </div>
                    </div>
                    <!-- sidebar menu: : style can be found in sidebar.less -->
                    <ul class="sidebar-menu">
                        <li class="header">MAIN NAVIGATION</li>
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <li>
                                <a class="btnMenu" asp-area="" asp-controller="AdminCategory" asp-action="Index">
                                    <i class="fa fa-th"></i> <span>Manage Category</span>
                                </a>
                            </li>
                            <li>
                                <a class="btnMenu" asp-area="" asp-controller="AdminDepartment" asp-action="Index">
                                    <i class="fa fa-th"></i> <span>Manage Department</span>
                                </a>
                            </li>
                            <li>
                                <a class="btnMenu" asp-area="" asp-controller="AdminSubmission" asp-action="Index">
                                    <i class="fa fa-th"></i> <span>Manage Submission</span>
                                </a>
                            </li>
                            <li>
                                <a class="btnMenu" asp-area="" asp-controller="User" asp-action="Index">
                                    <i class="fa fa-th"></i> <span>Manage User</span>
                                </a>
                            </li>
                            <li>
                                <a class="btnMenu" asp-area="" asp-controller="Role" asp-action="Index">
                                    <i class="fa fa-th"></i> <span>Manage Role</span>
                                </a>
                            </li>
                        }
                        <li>
                            <a class="btnMenu" asp-area="" asp-controller="Submission" asp-action="Index">
                                <i class="fa fa-th"></i> <span>Staff Submission</span>
                            </a>
                        </li>
                    </ul>
                </section>
                <!-- /.sidebar -->
            </aside>

            @RenderBody()
        </div>
    }
    else
    {
        <div class="container" style="height: 100%">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @if (User.Identity.IsAuthenticated)
    {
        <script src="~/css/AdminLTE/plugins/jQuery/jQuery-2.1.3.min.js"></script>
        <script src="~/css/AdminLTE/jquery-ui.min.js"></script>
        <script>
            $.widget.bridge('uibutton', $.ui.button);
        </script>
        <script src="~/css/AdminLTE/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/raphael-min.js"></script>
        <script src="~/css/AdminLTE/plugins/morris/morris.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/sparkline/jquery.sparkline.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/jvectormap/jquery-jvectormap-1.2.2.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/jvectormap/jquery-jvectormap-world-mill-en.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/knob/jquery.knob.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/daterangepicker/daterangepicker.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/datepicker/bootstrap-datepicker.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/iCheck/icheck.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
        <script src='~/css/AdminLTE/plugins/fastclick/fastclick.min.js'></script>
        <script src="~/css/AdminLTE/dist/js/app.min.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/dist/js/pages/dashboard.js" type="text/javascript"></script>
        <script src="~/css/AdminLTE/dist/js/demo.js" type="text/javascript"></script>

        <script type="text/javascript">
            activeMenu();
            loadCssAccountManage();

            function activeMenu() {
                var lstPath = location.pathname.split('/').filter(function (i) { return i });
                if (lstPath && lstPath.length > 0) {
                    var path = lstPath[0];
                    var aMenu = $('a[href="/' + path + '"]');
                    if (aMenu) {
                        for (var i = 0; i < aMenu.length; i++) {
                            if (aMenu[i].className == 'btnMenu') {
                                var liMenu = aMenu[i].parentNode;
                                liMenu.className += " active";
                            }
                        }
                    }
                }
            }

            function loadCssAccountManage() {
                if (location.pathname.includes("Identity/Account/Manage/")) {
                    var head = document.getElementsByTagName('head')[0];

                    var style = document.createElement('link');
                    style.href = '../../../css/manageAccount.css';
                    style.type = 'text/css';
                    style.rel = 'stylesheet';
                    head.append(style);
                }
                else if (location.pathname.includes("Identity/Account/Manage")) {
                    var head = document.getElementsByTagName('head')[0];

                    var style = document.createElement('link');
                    style.href = '../../css/manageAccount.css';
                    style.type = 'text/css';
                    style.rel = 'stylesheet';
                    head.append(style);
                }
            }
        </script>
    }
</body>
</html>