@model Idea.Models.Submission

@{
    ViewData["Title"] = "Edit";
}

<div class="content-wrapper">
    <style>
        .validation-summary-errors > ul {
            list-style: none;
            text-align: right;
        }
    </style>

    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Submission
            <small> > @Html.DisplayFor(model => model.Name)</small>
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Submission</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box box-solid" style="box-shadow: none;">
                    <div class="box-header with-border" style="text-align: left">
                        <i class="fa fa-text-width" style="margin-top: 20px"></i>
                        <h3 class="box-title">
                            Edit
                        </h3>
                        <div style="float: right">
                            <input id="submitEdit" type="submit" form="formEdit" value="Save" style="display: none" />
                            <a class="btn btn-app" onclick="$('#submitEdit').trigger('click');">
                                <i class="fa fa-save"></i> Save
                            </a>
                            <a class="btn btn-app" asp-action="Index">
                                <i class="fa fa-angle-left"></i> Back to List
                            </a>
                        </div>
                    </div><!-- /.box-header -->
                    <div class="box-body">
                        <form asp-action="Edit" id="formEdit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />

                            <dl class="dl-horizontal">
                                <dt style="margin-top: 5px;">@Html.DisplayNameFor(model => model.Name)</dt>
                                <dd style="margin-bottom: 15px;">
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </dd>

                                <dt style="margin-top: 5px;">@Html.DisplayNameFor(model => model.Deadline_1)</dt>
                                <dd style="margin-bottom: 15px;">
                                    <input asp-for="Deadline_1" class="form-control" />
                                    <span asp-validation-for="Deadline_1" class="text-danger"></span>
                                </dd>

                                <dt style="margin-top: 5px;">@Html.DisplayNameFor(model => model.Deadline_2)</dt>
                                <dd style="margin-bottom: 15px;">
                                    <input asp-for="Deadline_2" class="form-control" />
                                    <span asp-validation-for="Deadline_2" class="text-danger"></span>
                                </dd>
                            </dl>
                        </form>

                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- ./col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}