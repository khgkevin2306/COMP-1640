@model IEnumerable<Idea.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <a class="btn btn-app" asp-action="Create" style="border: 1px solid #999; position: absolute; bottom: 0px; right: 10px; z-index: 2;">
        <i class="fa fa-plus"></i> Create New
    </a>
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Category
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Category</li>
        </ol>
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-body">
                        <table id="example2" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th style="text-align: center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td style="vertical-align: middle;">
                                            <a asp-action="Details" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Name)</a>
                                        </td>
                                        <td style="text-align: center">
                                            <a class="btn btn-app" asp-action="Edit" asp-route-id="@item.Id">
                                                <i class="fa fa-edit"></i> Edit
                                            </a>
                                            <a class="btn btn-app" asp-action="Delete" asp-route-id="@item.Id">
                                                <i class="fa fa-trash"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.box-body -->
                </div><!-- /.box -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </section><!-- /.content -->
</div><!-- /.content-wrapper -->